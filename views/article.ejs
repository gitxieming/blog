<%- include header %>
<link rel="stylesheet" href="../../stylesheets/style.css">
<p><h2><a href="/<%= locals.post.user %>/<%= locals.post.time.day %>/<%= locals.post.title %>"><%= locals.post.title %></a></h2></p>
<p class="info">
    作者：<a href="/<%= locals.post.user %>"><%= locals.post.user %></a> |
    日期：<%= locals.post.time.minute %> |
    标签：
    <% locals.post.tags.forEach(function(tag, index){ %>
       <% if(tag.tag){ %>
           <a class="tag" href="/tags/<%= tag.tag %>"><%= tag.tag %></a>
       <% } %>
    <% }) %>
</p>
<p><%- locals.post.post %></p>
<p class="info">阅读：<%= locals.post.pv %> | 评论：
    <% if(locals.post.comments){ %>
        <%= locals.post.comments.length %></p>
    <% } else { %>
        <%= 0 %></p>
    <% } %>
<%- include comment %>
<%- include footer %>